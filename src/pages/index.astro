import Navigation from '../components/navi.astro';
import Hero from '../components/home/hero.astro';
import Technologies from '../components/home/technologies.astro';
import Description from '../components/home/description.astro';
import CallToAction from '../components/home/cta.astro';
import Footer from '../components/footer.astro';
import ThemeToggle from '../components/themetoggle.astro';
import ScrollAnimations from '../components/scrollanimations.astro';
