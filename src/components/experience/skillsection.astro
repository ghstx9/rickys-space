---
import SkillCategory from './skillcategory.astro';

const frontEndSkills = [
  { name: 'HTML5', progress: 95 },
  { name: 'CSS', progress: 75 },
  { name: 'Astro', progress: 80 },
  { name: 'React', progress: 20 }
];

const toolsSkills = [
  { name: 'Git & GitHub', progress: 80 },
  { name: 'Vite', progress: 75 },
  { name: 'NPM/Package Management', progress: 65 },
  { name: 'VS Code', progress: 90 }
];

const uiUxSkills = [
  { name: 'Responsive Design', progress: 85 },
  { name: 'CSS Animations', progress: 80 },
  { name: 'UI Design', progress: 85 },
  { name: 'Color Theory', progress: 45 }
];

const designSkills = [
  { name: 'Canva', progress: 95 },
